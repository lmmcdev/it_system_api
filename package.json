{
  "name": "it-system-api",
  "version": "1.0.0",
  "description": "Azure Functions API for IT System management with CosmosDB and Cognitive Search",
  "main": "dist/src/functions/**/*.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "start": "func start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "generate:endpoint": "plop endpoint"
  },
  "dependencies": {
    "@azure/cosmos": "^4.0.0",
    "@azure/functions": "^4.5.0",
    "@azure/search-documents": "^12.2.0",
    "dotenv": "^16.4.5",
    "swagger-ui-dist": "^5.29.4",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.21",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "azure-functions-core-tools": "^4.0.5455",
    "eslint": "^8.56.0",
    "jest": "^30.2.0",
    "plop": "^4.0.4",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.4.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
